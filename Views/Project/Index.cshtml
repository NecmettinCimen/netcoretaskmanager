@model ApiResultModel<ProjectViewModel>
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = Model.Data.Project.Title;
    int? user = Context.Session.GetInt32("userid");
}

@if (user.HasValue && user.Value == Model.Data.Project.ManagerId)
{

    <form action="/project/update" id="projectUpdateForm">
        <input hidden name="id" value="@Model.Data.Project.Id" />
        <input hidden name="managerId" value="@Model.Data.Project.ManagerId" />
        <input hidden name="eventId" value="@Model.Data.Project.EventId" />
        <input hidden name="title" />
        <input hidden name="explanation" />
        <div class="row">
            <div class="col-md-12">
                <h2 onkeyup="editButtonShow()" class="bd-content-title float-left" id="title" contenteditable="true">@Model.Data.Project.Title</h2>
                <button id="saveButton" hidden type="button" class="btn btn-outline-secondary float-right">Kaydet</button>
                @if (Model.Data.Project.Public)
                {
                    <button type="button" onclick="setpublic(@Model.Data.Project.Id)" class="btn btn-outline-success float-right">Kimse Görmesin</button>
                }
                else
                {
                    <button type="button" onclick="setpublic(@Model.Data.Project.Id)" class="btn btn-outline-danger float-right">Herkes Görsün</button>
                }
            </div>
        </div>
        <div id="editor1" onkeyup="editButtonShow()" contenteditable="true">@(String.IsNullOrEmpty(Model.Data.Project.Explanation) ? Html.Raw("Açıklama Ekle") : Html.Raw(Model.Data.Project.Explanation))</div>
    </form>

    @section Scripts{
        <script src="https://cdn.ckeditor.com/4.13.1/standard-all/ckeditor.js"></script>

        <script>
            CKEDITOR.disableAutoInline = true;
            CKEDITOR.inline('editor1', {
                extraPlugins: 'sourcedialog'
            });


            function editButtonShow() {
                $('#saveButton').removeAttr('hidden')
            }

            $('#saveButton').on('click', (e) => {
                $('[name="title"]').val($('#title').text())
                $('[name="explanation"]').val(CKEDITOR.instances.editor1.getData())
                $('#projectUpdateForm').submit()
            })

            function setpublic(id) {
                fetch('/project/UpdatePublic?id=' + id)
                    .then(res => res.json())
                    .then(res => location.reload())
            }
        </script>
    }

}
else
{
    <div><h2 class="bd-content-title" id="title">@Model.Data.Project.Title</h2>
    <div>@(String.IsNullOrEmpty(Model.Data.Project.Explanation) ? Html.Raw("Açıklama Yok") : Html.Raw(Model.Data.Project.Explanation))</div></div>
}
@if (!Model.Success)
{
    <div class="alert alert-danger">Hata! <br /><small class="form-text text-muted">@Model.Error</small></div>
}
<hr />
<div class="row"><div class="col-md-12"><h5 class="bd-content-title float-left">Görevler</h5></div></div>
<div class="row mb-2">
    <div class="col-md-12">
        <form action="/work/save" class="row">
            <input hidden name="projectId" value="@Model.Data.Project.Id" />
            <div class="col-md-11"><input name="title" class="form-control" placeholder="Görev Başlık" /></div>
            <div class="col-md-1"><button type="submit" class="btn btn-outline-primary float-right">Kaydet</button></div>
        </form>
    </div>
</div>

<ul class="list-group">
    @foreach (var item in Model.Data.WorkList)
    {
        <li class="list-group-item mt-2" style="cursor:pointer">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-9">
                            <h5 onclick="window.location='/work/@item.Url'">#@item.Id @item.Title</h5>
                        </div>
                        <div class="col-md-1" style="text-align:right">
                            <div class="dropdown">
                                <button type="button" class="btn btn-outline-info" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @item.EventName
                                </button>
                                <div class="dropdown-menu">
                                    @foreach (var e in Model.Data.EventList.Where(x => x.Name != item.EventName))
                                    {
                                        <form action="/work/updatestatus">
                                            <input hidden name="id" value="@item.Id" />
                                            <input hidden name="eventId" value="@e.Id" />
                                            <input hidden name="managerId" value="@item.ManagerId" />
                                            <input hidden name="projectId" value="@item.ProjectId" />
                                            <button type="submit" class="btn btn-link">@e.Name</button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2" style="text-align:right">
                            <div class="dropdown">
                                <button type="button" class="btn btn-outline-warning" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @item.FirstLabelName
                                </button>
                                <div class="dropdown-menu">
                                    <form action="/work/UpdateLabels" class="px-1">
                                        <div class="form-group">
                                            <input hidden name="id" value="0" />
                                            <input hidden name="workId" value="@item.Id" />
                                            <input hidden name="projectId" value="@item.ProjectId" />
                                            <input onsubmit="$(this).submit()" type="text" class="form-control" placeholder="label" name="name">
                                            <button type="submit" class="btn btn-link" hidden></button>
                                        </div>
                                    </form>
                                    @foreach (var l in Model.Data.LabelList)
                                    {
                                        <form action="/work/UpdateLabels" class="px-1">
                                            <div class="form-group">
                                                <input hidden name="id" value="@l.Id" />
                                                <input hidden name="workId" value="@item.Id" />
                                                <input hidden name="projectId" value="@item.ProjectId" />
                                                <button type="submit" class="btn btn-sm btn-block @(item.Labels.Contains(l.Id)?"btn-primary":"btn-link")">@l.Name</button>
                                            </div>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </li>
    }
</ul>
